<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="#15000000"
                />
            <corners
                android:radius="5dp"
                />
            <padding
                android:top="2.5dp"
                android:bottom="2.5dp"
                android:left="5dp"
                android:right="5dp"
                />
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="@color/transparent"
                />
        </shape>
    </item>
</selector>